#!/bin/bash -e

# Ensure bin scripts are executable (clone/copy in container can lose +x)
if [ -d "bin" ]; then
  chmod +x bin/* 2>/dev/null || true
fi

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database (only when DATABASE_URL is set)
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  if [ -n "${DATABASE_URL}" ]; then
    ./bin/rails db:prepare
  else
    echo "DATABASE_URL not set; skipping db:prepare. Set DATABASE_URL (e.g. link Postgres on Railway) and redeploy."
  fi
fi

exec "${@}"
